@model List<TuProyecto.Models.Producto>

@{
    ViewData["Title"] = "Catálogo";
    bool esCatalogoPdf = ViewBag.EsCatalogoPdf ?? false;
    var categoriaSeleccionada = ViewBag.CategoriaSeleccionada as string;
}

<div class="container py-5">
    @if (esCatalogoPdf)
    {
        <h2 class="text-center mb-5 catalogo-titulo">📖 Catálogos Disponibles</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var cat in Model)
            {
                <div class="col">
                    <div class="card h-100 producto-card text-center">
                        <!-- Imagen -->
                        <div class="img-wrapper">
                            <img src="@cat.ImagenUrl" class="producto-img" alt="@cat.Nombre">
                        </div>

                        <!-- Info -->
                        <div class="card-body">
                            <h5 class="producto-nombre">@cat.Nombre</h5>
                            <a href="~/images/catalogo@(cat.Id - 100).pdf"
                               target="_blank"
                               class="btn btn-warning w-100">
                                🌐 Abrir Catálogo
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h2 class="text-center mb-5 catalogo-titulo">🛍️ Catálogo de Productos</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 producto-card position-relative">

                        <!-- Imagen -->
                        <div class="img-wrapper">
                            <img src="@producto.ImagenUrl" class="producto-img" alt="@producto.Nombre">
                        </div>

                        <!-- Info -->
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="producto-nombre">@producto.Nombre</h5>
                                <p class="producto-precio mb-0">@string.Format("{0:C0}", producto.Precio)</p>
                            </div>
                            <div class="mt-3 d-flex gap-2">
                                <a href="@Url.Action("Detalle", "Catalogo", new { id = producto.Id })"
                                   class="btn btn-warning w-50">
                                    Ver Detalles ✨
                                </a>

                                <button type="button" class="btn btn-add-cart w-50 add-to-cart"
                                        data-id="@producto.Id"
                                        data-nombre="@producto.Nombre"
                                        data-precio="@producto.Precio"
                                        data-imagen="@producto.ImagenUrl">
                                    <i class="bi bi-cart-plus"></i> Añadir al carrito
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
