@model List<TuProyecto.Models.Producto>

@{
    ViewData["Title"] = "Catálogo";
    bool esCatalogoPdf = ViewBag.EsCatalogoPdf ?? false;
    var categoriaSeleccionada = ViewBag.CategoriaSeleccionada as string;
    var categorias = ViewBag.Categorias as List<string>;
}

<div class="container py-5">

    <!-- 🔹 Barra de categorías -->
    <div class="d-flex justify-content-center mb-4 flex-wrap gap-2">
        <a href="@Url.Action("Index", "Catalogo")"
           class="btn @(string.IsNullOrEmpty(categoriaSeleccionada) ? "btn-warning" : "btn-outline-warning")">
            Todos
        </a>

        @foreach (var cat in categorias)
        {
            <a href="@Url.Action("Index", "Catalogo", new { categoria = cat })"
               class="btn @(categoriaSeleccionada == cat ? "btn-warning" : "btn-outline-warning")">
                @cat
            </a>
        }
    </div>

    @if (esCatalogoPdf)
    {
        <h2 class="text-center mb-5 catalogo-titulo">📖 Catálogos Disponibles</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var cat in Model)
            {
                <div class="col">
                    <div class="card h-100 producto-card text-center">
                        <!-- Imagen -->
                        <div class="img-wrapper">
                            <img src="@cat.ImagenUrl" class="producto-img" alt="@cat.Nombre">
                        </div>

                        <!-- Info -->
                        <div class="card-body">
                            <h5 class="producto-nombre">@cat.Nombre</h5>
                            <a href="~/images/catalogo@(cat.Id - 100).pdf"
                               target="_blank"
                               class="btn btn-warning w-100">
                                🌐 Abrir Catálogo
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h2 class="text-center mb-5 catalogo-titulo">🛍️ Catálogo de Productos</h2>

        <!-- 🔹 Contenedor con scroll horizontal en móviles -->
        <div class="catalogo-scroll">
            <div class="row flex-nowrap row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var producto in Model)
                {
                    <div class="col">
                        <div class="card h-100 producto-card position-relative">

                            <!-- Imagen -->
                            <div class="img-wrapper">
                                <img src="@producto.ImagenUrl" class="producto-img" alt="@producto.Nombre">
                            </div>

                            <!-- Info -->
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="producto-nombre">@producto.Nombre</h5>
                                    <p class="producto-precio mb-0">@string.Format("{0:C0}", producto.Precio)</p>
                                </div>
                                <div class="mt-3 d-flex gap-2">
                                    <!-- 🔹 Ruta corregida -->
                                    <a href="@Url.Action("Detalle", "Catalogo", new { id = producto.Id })"
                                       class="btn btn-warning w-50">
                                        Ver Detalles ✨
                                    </a>

                                    <button type="button" class="btn btn-add-cart w-50 add-to-cart"
                                            data-id="@producto.Id"
                                            data-nombre="@producto.Nombre"
                                            data-precio="@producto.Precio"
                                            data-imagen="@producto.ImagenUrl">
                                        <i class="bi bi-cart-plus"></i> Añadir al carrito
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // ✅ Ejemplo básico de carrito (puedes adaptarlo a tu lógica real)
        document.querySelectorAll(".add-to-cart").forEach(btn => {
            btn.addEventListener("click", function () {
                alert("Producto agregado: " + this.dataset.nombre);
            });
        });
    </script>
}
