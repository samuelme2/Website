<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tienda Erótica</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/erotico.css" />
</head>
<body>
    <!-- Fondo animado -->
    <div class="fondo-animado"></div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-warning">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-warning" href="@Url.Action("Index", "Productos")">
                    🔥 Tienda Erótica 🔥
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" href="@Url.Action("Index", "Productos")">Catálogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" href="@Url.Action("Privacy", "Catalogo")">Privacidad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning fw-bold" href="@Url.Action("Contact", "Catalogo")">Contacto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4 text-light">
        @RenderBody()
    </main>

    <footer class="text-center py-3 mt-5 bg-dark border-top border-warning">
        <p class="mb-0 text-warning">&copy; @DateTime.Now.Year - Tienda Erótica</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

