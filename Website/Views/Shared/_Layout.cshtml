<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SensualShop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/erotico.css" />

    <style>
        header {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1030;
            transition: transform 0.3s ease-in-out;
        }

        .navbar-hidden {
            transform: translateY(-100%);
        }

        main {
            padding-top: 180px;
        }

        @@media (max-width: 768px) {
            main {
                padding-top: 160px;
            }
        }

        /* 🔹 Estilos para el dropdown personalizado */
        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .nav-item.dropdown:hover > .nav-link {
            background-color: #ffc107; /* Amarillo */
            color: #000 !important;
            border-radius: 4px;
        }

        .dropdown-menu {
            background-color: #222;
            border: 1px solid rgba(255,209,102,0.2);
        }

            .dropdown-menu .dropdown-item {
                color: #fff;
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: #ffc107;
                    color: #000;
                }
    </style>

    <meta name="description" content="SensualShop - Tienda online de productos íntimos, juguetes y bienestar sexual. Envío discreto y atención personalizada." />
</head>
<body>
    <div class="site-bg"></div>

    @{
        var appRoot = Url.Content("~");
        var categoriaSeleccionada = ViewBag.CategoriaSeleccionada as string;
    }

    <header>
        <!-- 🔹 Barra Superior -->
        <div class="top-bar text-center py-1" style="background: rgba(0,0,0,0.65); color: var(--accent); font-weight: 600; font-size: 0.95rem;">
            🚚 Envíos 100% discretos
        </div>

        <!-- 🔹 Barra del medio -->
        <div class="middle-bar d-flex justify-content-between align-items-center px-4 py-3"
             style="background: linear-gradient(90deg, rgba(0,0,0,0.65), rgba(0,0,0,0.5)); border-bottom: 1px solid rgba(255,209,102,0.06);">

            <!-- Logo -->
            <div class="d-flex align-items-center gap-2">
                <a class="navbar-brand d-flex align-items-center gap-2 text-decoration-none" href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo.png" alt="SensualShop" class="logo-small" />
                    <span class="brand-title">LS TIENDA ÍNTIMA</span>
                </a>
            </div>

            <!-- Buscador -->
            <div class="flex-grow-1 px-4">
                <form class="d-flex" action="/Catalogo/Productos" method="get">
                    <input type="search" class="form-control me-2"
                           placeholder="Buscar productos..."
                           style="background: rgba(255,255,255,0.08); border: 1px solid rgba(255,255,255,0.15); color: #fff; border-radius: 6px;">
                    <button class="btn btn-warning" type="submit">Buscar</button>
                </form>
            </div>

            <!-- Carrito -->
            <div>
                <a href="#" class="nav-link position-relative" data-bs-toggle="offcanvas" data-bs-target="#cartCanvas">
                    <i class="bi bi-cart3 fs-5 text-warning"></i>
                    <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        0
                    </span>
                </a>
            </div>
        </div>

        <!-- 🔹 Barra inferior: Filtros -->
        <nav class="navbar navbar-expand-lg px-3"
             style="background: linear-gradient(90deg, rgba(0,0,0,0.6), rgba(0,0,0,0.5));">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                    <ul class="navbar-nav navbar-filtros flex-wrap">
                        <li class="nav-item">
                            <a class="nav-link @(string.IsNullOrEmpty(categoriaSeleccionada) ? "active" : "")"
                               href="@($"{appRoot}?categoria=")">Todas</a>
                        </li>
                        <li class="nav-item"><a class="nav-link @(categoriaSeleccionada == "Lovense" ? "active" : "")" href="@($"{appRoot}?categoria=Lovense")">Lovense</a></li>
                        <li class="nav-item"><a class="nav-link @(categoriaSeleccionada == "Lubricantes" ? "active" : "")" href="@($"{appRoot}?categoria=Lubricantes")">Lubricantes</a></li>

                        <li class="nav-item dropdown">
                            <!-- Enlace principal Juguetes -->
                            <a class="nav-link @(categoriaSeleccionada == "Juguetes" ? "active" : "")"
                               href="@($"{appRoot}?categoria=Juguetes")">
                                Juguetes
                            </a>

                            <!-- Botón de desplegar subcategorías -->
                            <a class="nav-link dropdown-toggle dropdown-toggle-split"
                               href="#" id="juguetesDropdown"
                               role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                            </a>

                            <!-- Subfiltros -->
                            <ul class="dropdown-menu bg-warning" aria-labelledby="juguetesDropdown">
                                <li>
                                    <a class="dropdown-item @(categoriaSeleccionada == "Dildos" ? "active" : "")"
                                       href="@($"{appRoot}?categoria=Dildos")">Dildos</a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(categoriaSeleccionada == "Vibradores" ? "active" : "")"
                                       href="@($"{appRoot}?categoria=Vibradores")">Vibradores</a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(categoriaSeleccionada == "Torsos" ? "active" : "")"
                                       href="@($"{appRoot}?categoria=Torsos")">Torsos</a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(categoriaSeleccionada == "Anales" ? "active" : "")"
                                       href="@($"{appRoot}?categoria=Anales")">Anales</a>
                                </li>
                                <li>
                                    <a class="dropdown-item @(categoriaSeleccionada == "Sex Machines" ? "active" : "")"
                                       href="@($"{appRoot}?categoria=Sex Machines")">Sex Machines</a>
                                </li>
                            </ul>
                        </li>



                        <li class="nav-item"><a class="nav-link @(categoriaSeleccionada == "LGBTIQ+" ? "active" : "")" href="@($"{appRoot}?categoria=LGBTIQ+")">LGBTIQ+</a></li>
                        <li class="nav-item"><a class="nav-link @(categoriaSeleccionada == "Bienestar" ? "active" : "")" href="@($"{appRoot}?categoria=Bienestar")">Bienestar</a></li>
                        <li class="nav-item"><a class="nav-link @(categoriaSeleccionada == "Bondage" ? "active" : "")" href="@($"{appRoot}?categoria=Bondage")">Bondage</a></li>
                        <li class="nav-item"><a class="nav-link @(categoriaSeleccionada == "Kits" ? "active" : "")" href="@($"{appRoot}?categoria=Kits")">Kits</a></li>
                        <li class="nav-item"><a class="nav-link @(categoriaSeleccionada == "Ofertas" ? "active" : "")" href="@($"{appRoot}?categoria=Ofertas")">Ofertas</a></li>
                        <li class="nav-item"><a class="nav-link @(categoriaSeleccionada == "Lencería" ? "active" : "")" href="@($"{appRoot}?categoria=Lencería")">Lencería y disfraces</a></li>
                    </ul>

                    <!-- Opciones generales -->
                    <ul class="navbar-nav navbar-opciones flex-nowrap align-items-center ms-4">
                        <li class="nav-item me-2">
                            <a class="nav-link" href="@Url.Action("Productos", "Catalogo")">Catálogo</a>
                        </li>
                        <li class="nav-item me-2 d-none d-lg-block">
                            <a class="nav-link" href="@Url.Action("About", "Home")">Nosotros</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" href="@Url.Action("Privacy", "Home")">Privacidad</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="text-center py-4">
        <div class="small">
            © @DateTime.Now.Year SensualShop — Envío discreto | Atención confidencial
        </div>
        <div class="small mt-2">
            <a href="https://wa.me/573248416899" class="link-light text-decoration-none">+57 324 841 6899</a>
        </div>
    </footer>

    <!-- Botón flotante WhatsApp -->
    <a href="https://api.whatsapp.com/send?phone=573248416899&text=Hola,%20Deseo%20una%20asesoria%20personalizada%20🔥😈" class="whatsapp-float" target="_blank" rel="noopener">
        <img src="@Url.Content("~/images/whatsapp.png")" alt="WhatsApp" />
        <span class="whatsapp-msg">💬 Para una asesoría personalizada, escríbenos</span>
    </a>

    <!-- Offcanvas Carrito -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartCanvas" aria-labelledby="cartCanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="cartCanvasLabel">🛒 Mi Carrito</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
        </div>
        <div class="offcanvas-body">
            <ul id="cart-items" class="list-group mb-3"></ul>
            <div class="d-flex justify-content-between fw-bold">
                <span>Total:</span>
                <span id="cart-total">$0</span>
            </div>
            <button class="btn btn-success w-100 mt-3" onclick="enviarWhatsApp()">Finalizar pedido por WhatsApp</button>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/carrito.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var lastScrollTop = 0;
            var header = document.querySelector('header');
            var headerHeight = header.offsetHeight;

            window.addEventListener('scroll', function () {
                var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                if (scrollTop > lastScrollTop && scrollTop > headerHeight) {
                    header.classList.add('navbar-hidden');
                } else {
                    header.classList.remove('navbar-hidden');
                }
                lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
            });
        });
    </script>
</body>
</html>
