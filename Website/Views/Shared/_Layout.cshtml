@* Layout modificado — usa CatalogoController(Index) para filtros y dropdown split para Juguetes *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SensualShop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/erotico.css" />

    <style>
        /* Modificación de estilos para hacerlo más llamativo */
        .dropdown-menu {
            /* Fondo más oscuro y borde sutil */
            background-color: #1a1a1a;
            border: 1px solid var(--bs-warning); /* Usa el color de resalte */
            border-radius: 8px;
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.2); /* Sombra ámbar */
            padding: 8px 0;
        }

            .dropdown-menu .dropdown-item {
                color: #fff;
                padding: 8px 15px; /* Más espacio */
                transition: all 0.2s ease-in-out;
            }

                .dropdown-menu .dropdown-item:hover,
                .dropdown-menu .dropdown-item.active-subfilter { /* Nuevo estilo para subfiltro activo */
                    background-color: #ffc107; /* Fondo de resalte */
                    color: #000;
                    font-weight: 600;
                    transform: translateX(5px); /* Pequeño desplazamiento al pasar el mouse */
                    border-left: 3px solid #dc3545; /* Línea roja de énfasis */
                }

                    /* Asegura que el icono también cambie de color cuando está activo */
                    .dropdown-menu .dropdown-item:hover i,
                    .dropdown-menu .dropdown-item.active-subfilter i {
                        color: #000 !important;
                    }

        /* Estilo para el botón de toggle cuando está abierto (en móviles/al hacer clic) */
        .nav-item.dropdown .dropdown-toggle[aria-expanded="true"] {
            color: #000 !important;
            background-color: #ffc107;
            border-radius: 4px;
        }
        header {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1030;
            transition: transform 0.3s ease-in-out;
        }

        .navbar-hidden {
            transform: translateY(-100%);
        }

        main {
            padding-top: 180px;
        }

        @@media (max-width: 768px) {
            main {
                padding-top: 160px;
            }
        }

        /* dropdown: mostrar al hover SOLO en dispositivos con pointer (no en touch) */
        @@media (hover: hover) and (pointer: fine) {
            .nav-item.dropdown:hover .dropdown-menu

        {
            display: block;
        }

        .nav-item.dropdown:hover > .nav-link.dropdown-toggle {
            color: #000 !important;
            background-color: #ffc107;
            border-radius: 4px;
        }

        }

        .dropdown-menu {
            background-color: #222;
            border: 1px solid rgba(255,209,102,0.15);
        }

            .dropdown-menu .dropdown-item {
                color: #fff;
            }

                .dropdown-menu .dropdown-item:hover {
                    background-color: #ffc107;
                    color: #000;
                }
    </style>

    <meta name="description" content="SensualShop - Tienda online de productos íntimos, juguetes y bienestar sexual. Envío discreto y atención personalizada." />
</head>
<body>
    <div class="site-bg"></div>

    @{
        // Usamos ViewBag.CategoriaSeleccionada que pone el controller
        var categoriaSeleccionada = ViewBag.CategoriaSeleccionada as string;
        bool isEmptySelected = string.IsNullOrEmpty(categoriaSeleccionada);
        Func<string, bool> isActive = cat =>
        !string.IsNullOrEmpty(cat) && string.Equals(categoriaSeleccionada?.Trim(), cat.Trim(), System.StringComparison.OrdinalIgnoreCase);
    }

    <header>
        <!-- Barra superior -->
        <div class="top-bar text-center py-1" style="background: rgba(0,0,0,0.65); color: var(--accent); font-weight: 600; font-size: 0.95rem;">
            🚚 Envíos 100% discretos
        </div>

        <!-- Barra del medio -->
        <div class="middle-bar d-flex justify-content-between align-items-center px-4 py-3"
             style="background: linear-gradient(90deg, rgba(0,0,0,0.65), rgba(0,0,0,0.5)); border-bottom: 1px solid rgba(255,209,102,0.06);">

            <!-- Logo -->
            <div class="d-flex align-items-center gap-2">
                <a class="navbar-brand d-flex align-items-center gap-2 text-decoration-none" href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo.png" alt="SensualShop" class="logo-small" />
                    <span class="brand-title">LS TIENDA ÍNTIMA</span>
                </a>
            </div>

            <!-- Buscador -->
            <div class="flex-grow-1 px-4">
                <form class="d-flex" action="@Url.Action("Index", "Catalogo")" method="get">
                    <input name="q" type="search" class="form-control me-2"
                           placeholder="Buscar productos..."
                           style="background: rgba(255,255,255,0.08); border: 1px solid rgba(255,255,255,0.15); color: #fff; border-radius: 6px;">
                    <button class="btn btn-warning" type="submit">Buscar</button>
                </form>
            </div>

            <!-- Carrito (extremo derecho) -->
            <div>
                <a href="#" class="nav-link position-relative" data-bs-toggle="offcanvas" data-bs-target="#cartCanvas" aria-label="Abrir carrito">
                    <i class="bi bi-cart3 fs-5 text-warning" aria-hidden="true"></i>
                    <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span>
                </a>
            </div>
        </div>

        <!-- Barra inferior: filtros -->
        <nav class="navbar navbar-expand-lg px-3" style="background: linear-gradient(90deg, rgba(0,0,0,0.6), rgba(0,0,0,0.5));">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                    <ul class="navbar-nav navbar-filtros flex-wrap">

                        <!-- Todas -->
                        <li class="nav-item">
                            <a class="nav-link @(isEmptySelected ? "active" : "")"
                               href="@Url.Action("Index", "Catalogo")">Todas</a>
                        </li>

                        <!-- Lovense -->
                        <li class="nav-item">
                            <a class="nav-link @(isActive("Lovense") ? "active" : "")"
                               href="@Url.Action("Index", "Catalogo", new { categoria = "Lovense" })">Lovense</a>
                        </li>

                        <!-- Lubricantes -->
                        <li class="nav-item">
                            <a class="nav-link @(isActive("Lubricantes") ? "active" : "")"
                               href="@Url.Action("Index", "Catalogo", new { categoria = "Lubricantes" })">Lubricantes</a>
                        </li>

                        <!-- Juguetes (split dropdown: label navega, toggle abre subfiltros) -->
                        <li class="nav-item dropdown">
                            @* Label principal: navega a Juguetes *@
                            <a class="nav-link pe-0 @(isActive("Juguetes") ? "active" : "")"
                               href="@Url.Action("Index", "Catalogo", new { categoria = "Juguetes" })">
                                Juguetes
                            </a>

                            

                            <ul class="dropdown-menu" aria-labelledby="juguetesDropdown">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 @(isActive("Dildos") ? "active-subfilter" : "")"
                                       href="@Url.Action("Index", "Catalogo", new { categoria = "Dildos" })">
                                        <i class="bi bi-gender-male text-warning"></i> Dildos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 @(isActive("Vibradores") ? "active-subfilter" : "")"
                                       href="@Url.Action("Index", "Catalogo", new { categoria = "Vibradores" })">
                                        <i class="bi bi-lightning-charge text-warning"></i> Vibradores
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 @(isActive("Torsos") ? "active-subfilter" : "")"
                                       href="@Url.Action("Index", "Catalogo", new { categoria = "Torsos" })">
                                        <i class="bi bi-person-circle text-warning"></i> Torsos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 @(isActive("Anales") ? "active-subfilter" : "")"
                                       href="@Url.Action("Index", "Catalogo", new { categoria = "Anales" })">
                                        <i class="bi bi-heart text-warning"></i> Anales
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 @(isActive("Sex Machine") ? "active-subfilter" : "")"
                                       href="@Url.Action("Index", "Catalogo", new { categoria = "Sex Machine" })">
                                        <i class="bi bi-gear-fill text-warning"></i> Sex Machine
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Otros filtros -->
                        <li class="nav-item">
                            <a class="nav-link @(isActive("LGBTIQ+") ? "active" : "")" href="@Url.Action("Index", "Catalogo", new { categoria = "LGBTIQ+" })">LGBTIQ+</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(isActive("Bienestar") ? "active" : "")" href="@Url.Action("Index", "Catalogo", new { categoria = "Bienestar" })">Bienestar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(isActive("Bondage") ? "active" : "")" href="@Url.Action("Index", "Catalogo", new { categoria = "Bondage" })">Bondage</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(isActive("Kits") ? "active" : "")" href="@Url.Action("Index", "Catalogo", new { categoria = "Kits" })">Kits</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(isActive("Ofertas") ? "active" : "")" href="@Url.Action("Index", "Catalogo", new { categoria = "Ofertas" })">Ofertas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(isActive("Lencería") ? "active" : "")" href="@Url.Action("Index", "Catalogo", new { categoria = "Lencería" })">Lencería y disfraces</a>
                        </li>
                    </ul>

                    <!-- Opciones generales (derecha, sin carrito) -->
                    <ul class="navbar-nav navbar-opciones flex-nowrap align-items-center ms-4">
                        <li class="nav-item me-2">
                            <a class="nav-link" href="@Url.Action("Productos", "Catalogo")">Catálogo</a>
                        </li>
                        <li class="nav-item me-2 d-none d-lg-block">
                            <a class="nav-link" href="@Url.Action("About", "Home")">Nosotros</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" href="@Url.Action("Privacy", "Home")">Privacidad</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="text-center py-4">
        <div class="small">© @DateTime.Now.Year SensualShop — Envío discreto | Atención confidencial</div>
        <div class="small mt-2"><a href="https://wa.me/573248416899" class="link-light text-decoration-none">+57 324 841 6899</a></div>
    </footer>

    <!-- WhatsApp flotante -->
    <a href="https://api.whatsapp.com/send?phone=573248416899&text=Hola,%20Deseo%20una%20asesoria%20personalizada%20🔥😈" class="whatsapp-float" target="_blank" rel="noopener">
        <img src="@Url.Content("~/images/whatsapp.png")" alt="WhatsApp" />
        <span class="whatsapp-msg">💬 Para una asesoría personalizada, escríbenos</span>
    </a>

    <!-- Offcanvas Carrito -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartCanvas" aria-labelledby="cartCanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="cartCanvasLabel">🛒 Mi Carrito</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
        </div>
        <div class="offcanvas-body">
            <ul id="cart-items" class="list-group mb-3"></ul>
            <div class="d-flex justify-content-between fw-bold">
                <span>Total:</span>
                <span id="cart-total">$0</span>
            </div>
            <button class="btn btn-success w-100 mt-3" onclick="enviarWhatsApp()">Finalizar pedido por WhatsApp</button>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/carrito.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var lastScrollTop = 0;
            var header = document.querySelector('header');
            var headerHeight = header.offsetHeight;

            window.addEventListener('scroll', function () {
                var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                if (scrollTop > lastScrollTop && scrollTop > headerHeight) {
                    header.classList.add('navbar-hidden');
                } else {
                    header.classList.remove('navbar-hidden');
                }
                lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
            });
        });
    </script>
</body>
</html>
