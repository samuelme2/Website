<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SensualShop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/erotico.css" />

    <style>
        header {
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 1030;
            transition: transform 0.3s ease-in-out;
        }

        .navbar-hidden {
            transform: translateY(-100%);
        }

        main {
            padding-top: 120px;
        }

        @@media (max-width: 768px) {
            main {
                padding-top: 100px;
            }
        }
    </style>

    <meta name="description" content="SensualShop - Tienda online de productos íntimos, juguetes y bienestar sexual. Envío discreto y atención personalizada." />
</head>
<body>
    <div class="site-bg"></div>

    @{
        var appRoot = Url.Content("~");
        var categorias = ViewBag.Categorias as List<string>;
        var categoriaSeleccionada = ViewBag.CategoriaSeleccionada as string;
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid d-flex flex-nowrap align-items-center">

                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center gap-2" href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo.png" alt="SensualShop" class="logo-small" />
                    <span class="brand-title">LS TIENDA ÍNTIMA</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-flex flex-nowrap align-items-center" id="mainNav">

                    <!-- 🔥 Filtros (Amarillo) -->
                    @if (categorias != null && ViewData["Title"]?.ToString() == "Catálogo")
                    {
                        <ul class="navbar-nav navbar-filtros me-3 flex-nowrap">
                            <li class="nav-item">
                                <a class="nav-link @(string.IsNullOrEmpty(categoriaSeleccionada) ? "active" : "")"
                                   href="@($"{appRoot}?categoria=")">
                                    Todas
                                </a>
                            </li>
                            @for (int i = 0; i < categorias.Count; i++)
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(categorias[i] == categoriaSeleccionada ? "active" : "")"
                                       href="@($"{appRoot}?categoria={System.Net.WebUtility.UrlEncode(categorias[i])}")">
                                        @categorias[i]
                                    </a>
                                </li>
                            }
                            <!-- Categoría fija -->
                            <li class="nav-item">
                                <a class="nav-link @(categoriaSeleccionada == "Lencería" ? "active" : "")"
                                   href="@($"{appRoot}?categoria=Lencería")">
                                    Lencería y disfraces
                                </a>
                            </li>
                        </ul>
                    }

                    <!-- 🔥 Opciones Generales (Morado) -->
                    <ul class="navbar-nav navbar-opciones flex-nowrap align-items-center me-auto">
                        <li class="nav-item me-2">
                            <a class="nav-link" href="@Url.Action("Productos", "Catalogo")">Catálogo</a>
                        </li>
                        <li class="nav-item me-2 d-none d-lg-block">
                            <a class="nav-link" href="@Url.Action("About", "Home")">Nosotros</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" href="@Url.Action("Privacy", "Home")">Privacidad</a>
                        </li>
                    </ul>

                    <!-- 🛒 Carrito (aparte, extremo derecho) -->
                    <ul class="navbar-nav ms-auto me-4">
                        <li class="nav-item">
                            <a href="#" class="nav-link position-relative" data-bs-toggle="offcanvas" data-bs-target="#cartCanvas">
                                <i class="bi bi-cart3 fs-5 text-warning"></i>
                                <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="text-center py-4">
        <div class="small">
            © @DateTime.Now.Year SensualShop — Envío discreto | Atención confidencial
        </div>
        <div class="small mt-2">
            <a href="https://wa.me/573248416899" class="link-light text-decoration-none">+57 324 841 6899</a>
        </div>
    </footer>

    <!-- Botón flotante WhatsApp -->
    <a href="https://api.whatsapp.com/send?phone=573248416899&text=Hola,%20Deseo%20una%20asesoria%20personalizada%20🔥😈" class="whatsapp-float" target="_blank" rel="noopener">
        <img src="@Url.Content("~/images/whatsapp.png")" alt="WhatsApp" />
        <span class="whatsapp-msg">💬 Para una asesoría personalizada, escríbenos</span>
    </a>

    <!-- Offcanvas Carrito -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="cartCanvas" aria-labelledby="cartCanvasLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="cartCanvasLabel">🛒 Mi Carrito</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
        </div>
        <div class="offcanvas-body">
            <ul id="cart-items" class="list-group mb-3"></ul>
            <div class="d-flex justify-content-between fw-bold">
                <span>Total:</span>
                <span id="cart-total">$0</span>
            </div>
            <button class="btn btn-success w-100 mt-3" onclick="enviarWhatsApp()">Finalizar pedido por WhatsApp</button>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/carrito.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var lastScrollTop = 0;
            var header = document.querySelector('header');
            var headerHeight = header.offsetHeight;

            window.addEventListener('scroll', function () {
                var scrollTop = window.pageYOffset || document.documentElement.scrollTop;
                if (scrollTop > lastScrollTop && scrollTop > headerHeight) {
                    header.classList.add('navbar-hidden');
                } else {
                    header.classList.remove('navbar-hidden');
                }
                lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
            });
        });
    </script>
</body>
</html>
